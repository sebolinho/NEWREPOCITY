        "postcss": "^8.4.6",
        "tailwindcss": "^3.1.0",
        "terser": "^5.43.1",
        "vite": "^7.0.6"
    },
    "dependencies": {
        "@alpinejs/collapse": "^3.12.2",
        "@tailwindcss/typography": "^0.5.10",
        "postcss-rename": "^0.6.1",
